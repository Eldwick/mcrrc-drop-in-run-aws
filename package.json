{
  "name": "mcrrc-drop-in-runs",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others -n api,next -c blue,green \"tsx scripts/local-api.ts\" \"npm run --prefix frontend dev\"",
    "dev:setup": "docker compose up -d && tsx scripts/create-table.ts && tsx scripts/seed-dynamodb.ts",
    "dev:api": "tsx scripts/local-api.ts",
    "dev:db:start": "docker compose up -d",
    "dev:db:stop": "docker compose down",
    "dev:db:create-table": "tsx scripts/create-table.ts",
    "dev:db:seed": "tsx scripts/seed-dynamodb.ts"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^5.0.0",
    "@types/node": "^25.2.3",
    "concurrently": "^9.1.0",
    "express": "^5.1.0",
    "tsx": "^4.8.1"
  }
}
